<div class="container">
  <div class="hero-unit">
    <div class="welcome">
      <h1>Welcome, <%= @user.first_name %>, </h1>
      <h2> to your kickass profile page! </h2>
    </div>

    <div class="create">
      <h3> Create a blog post! <h3>
        <form action="/blog_post" method="post">
          <input type="text" name="title" placeholder="Title"><br>
          <textarea cols="40" rows="20" name="content">"Write your thoughts here."
          </textarea><br>
          <input type="text" name="tag" placeholder="List your post tags here">
        </form>
    </div>





  </div>
  

</div>

